    <Folder Include="Controllers\" />
    <Folder Include="Images\" />
    <Folder Include="Models\" />
    <Folder Include="Views\" />
    <Folder Include="ViewModels\" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
